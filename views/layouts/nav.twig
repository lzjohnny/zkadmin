<!-- Static navbar -->
<div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% if cluster %}
                <a class="navbar-brand" href="/cluster/{{ cluster }}">Zookeeper管理后台</a>
            {% else %}
                <a class="navbar-brand" href="/cluster">Zookeeper管理后台</a>
            {% endif %}
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                       aria-expanded="false">当前集群：{{ cluster ?? '未选择' }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        {% for cluster in clusters %}
                            <li><a href="/cluster/{{ cluster.name }}">{{ cluster.name }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/cluster">主页</a></li>
                {% if isAdmin %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-expanded="false">后台管理<span
                                    class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/admin">集群管理</a></li>
                            <li><a href="/permission">权限管理</a></li>
                        </ul>
                    </li>
                {% endif %}
                {% if user %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-expanded="false">${user.name}<span
                                    class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/team">团队管理</a></li>
                            <li><a href="/logout">注销</a></li>
                        </ul>
                    </li>
                {% endif %}
                <li><a href="https://github.com/lzjohnny/zkadmin/blob/master/README.md" target="_blank">Wiki</a></li>
            </ul>

        </div><!--/.nav-collapse -->
    </div>
</div>